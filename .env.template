# API Settings
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# Database
DATABASE_URL=sqlite:///./agent9.db

# Logging
LOG_LEVEL=INFO

# Cache
CACHE_URL=memory://

# Feature Flags
